<table cellspacing='0' style='margin-top: 100px' style='margin:auto'> <!-- cellspacing='0' is important, must stay -->

	<!-- Table Header -->
	<thead>
		<tr>
			<th>Questions</th>
			<th>Marked</th>
			<th>Complete</th>
		</tr>
	</thead>
	<!-- Table Header -->

	<!-- Table Body -->

	<tbody>	
		<%i = 1 %>
		<% while (i < @questions.length + 1) %>
			<% if (i % 2) == 0 %>
		<tr>
			<td>
				<%=link_to "Question #{i}", exam_question_path(params[:exam_id], i ) %>
			</td>
			<td> 
				<%= @marked[i - 1] %>
			</td>
				<% if @questions[i-1]  %>
				<td>
					Yes
				</td>
				<% else %>
					<td>
						No
					</td>
				<% end %>

			<% else %>
		<tr class="even">
			<td>
				<%=link_to "Question #{i}", exam_question_path(params[:exam_id], i ) %>
			</td>
			<td>
				<%= @marked[i - 1] %>
			</td>
			<% if @questions[i-1]  %>
				<td>
					Yes
				</td>
				<% else %>
					<td>
						No
					</td>
				<% end %>
		</tr>
			<%end %>
			<% i += 1%>
		<% end %>

			
